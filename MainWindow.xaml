<Window x:Class="ShadowBBR_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadowBBR_Editor"
        mc:Ignorable="d"
		FontFamily="Segoe UI Light"
		FontSize="12"
		TextBlock.Foreground="White"
        Title="Shadow Beat Boxing - Beatmap Editor" Height="900" Width="1600" MinWidth="1200" MinHeight="700" Background="#FF202325" Icon="icon/glove.ico" Foreground="White" >
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="96"/>
			<ColumnDefinition Width="auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="256"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*" />
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<!--Metadata-->
		<Rectangle Grid.Column="1" Grid.Row="1" Fill="#FF36393F"/>
		<Image x:Name="AlbumCover" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="32" Source="icon/cover.png"/>
		<StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Width="512" Height="192" Margin="240,0,0,0" VerticalAlignment="Center">
			<TextBlock Text="Song Title" Margin="0,0,0,4" FontSize="20" FontFamily="Segoe UI" FontWeight="Bold" HorizontalAlignment="Left"/>
			<TextBox x:Name="TitleField" Margin="0,0,0,8" FontSize="16" Width="384" HorizontalAlignment="Left" FontFamily="Segoe UI Semibold"/>
			<TextBlock Text="Artist" Margin="0,0,0,4" FontSize="20" FontFamily="Segoe UI" FontWeight="Bold" HorizontalAlignment="Left"/>
			<TextBox x:Name="ArtistField" Margin="0,0,0,8" FontSize="16" Width="384" HorizontalAlignment="Left" FontFamily="Segoe UI Semibold"/>
			<TextBlock Text="BPM" Margin="0,0,0,4" FontSize="20" FontFamily="Segoe UI" FontWeight="Bold" HorizontalAlignment="Left"/>
			<TextBox x:Name="BPMField" Margin="0,0,0,8" FontSize="16" Width="96" HorizontalAlignment="Left" FontFamily="Segoe UI Semibold"/>
		</StackPanel>

		<!--Utilities-->
		<Rectangle Grid.Column="3" Grid.Row="1" Fill="#FF202325"/>

		<!--Timeline-->
		<Rectangle Grid.Column="1" Grid.Row="3" Fill="#FF2F3136" Grid.ColumnSpan="3"/>
	</Grid>
</Window>
