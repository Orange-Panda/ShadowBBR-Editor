<UserControl x:Class="ShadowBBR_Editor.BeatmapLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShadowBBR_Editor"
             mc:Ignorable="d">
	<DockPanel>
		<Border Background="White" BorderBrush="DarkGray" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="2" DockPanel.Dock="Top">
			<TextBlock x:Name="text" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Text="0"/>
		</Border>
		<Rectangle DockPanel.Dock="Bottom" Height="6" Width="1" Fill="#FF404040" HorizontalAlignment="Left" />
	</DockPanel>
</UserControl>
